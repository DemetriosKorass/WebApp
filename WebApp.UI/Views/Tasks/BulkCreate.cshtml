@{
    ViewData["Title"] = "Bulk Create Tasks";
}

<h1>Bulk Create Tasks</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="BulkCreate" method="post" class="card p-3" style="max-width: 800px;">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="taskNames" class="form-label">Task Names (one per line):</label>
        <textarea id="taskNames" name="taskNames" class="form-control" rows="10"></textarea>
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary btn-sm">Create Tasks</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">Cancel</a>
    </div>
</form>
