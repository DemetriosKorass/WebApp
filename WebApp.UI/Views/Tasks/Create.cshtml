@model WebApp.DAL.Entities.Task

@{
    ViewData["Title"] = "Create Task";
}

<h1 class="my-4">Create a New Task</h1>

<form asp-action="Create" method="post" class="card p-3" style="max-width: 800px;">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="Name" class="form-label">Task Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model?.Name" />
        @* Validation errors *@
        @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
        {
            foreach (var error in ViewData.ModelState["Name"]!.Errors)
            {
                <span class="text-danger">@error.ErrorMessage</span>
            }
        }
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success btn-sm">Create</button>
        <a href="/Tasks" class="btn btn-secondary btn-sm">Cancel</a>
    </div>
</form>
