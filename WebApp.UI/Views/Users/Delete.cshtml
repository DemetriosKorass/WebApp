@model WebApp.DAL.Entities.User
@{
    ViewData["Title"] = "Delete User";
}

<h1 class="my-4">Delete User</h1>

<div class="card p-3" style="max-width: 800px;">
    <p>Are you sure you want to delete this user?</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Email:</strong> @Model.Email</p>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex gap-2">
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        <a href="/Users" class="btn btn-secondary btn-sm">Cancel</a>
    </form>
</div>
