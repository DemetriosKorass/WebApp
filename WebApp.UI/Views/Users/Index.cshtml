@model List<WebApp.DAL.Entities.User>

@{
    ViewData["Title"] = "Users";
}

<h1 class="my-4">Users</h1>
<p>
    <a class="btn btn-primary btn-sm mb-3" href="@Url.Action("Create")">Create New User</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th style="width:150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = user.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = user.Id })">X</a>
                </td>
            </tr>
        }
    </tbody>
</table>
