@model WebApp.DAL.Entities.User
@{
    ViewData["Title"] = "Edit User";
}

<h1 class="my-4">Edit User</h1>

<form asp-action="Edit" method="post" class="card p-3" style="max-width: 800px;">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label for="Name" class="form-label">Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email:</label>
        <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" />
    </div>
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success btn-sm">Save</button>
        <a href="/Users" class="btn btn-secondary btn-sm">Cancel</a>
    </div>
</form>
