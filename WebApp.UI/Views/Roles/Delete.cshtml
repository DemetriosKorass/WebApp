@model WebApp.DAL.Entities.Role
@using WebApp.DAL.Entities
@{
    ViewData["Title"] = "Delete Role";
}

<h1 class="my-4">Delete Role</h1>

<div class="card p-3" style="max-width: 800px;">
    <p>Are you sure you want to delete this role?</p>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Permissions:</strong> @Model.Permissions</p>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-flex gap-2">
        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        <a href="/Roles" class="btn btn-secondary btn-sm">Cancel</a>
    </form>
</div>
